<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.LoginActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainActivity">

        </activity>
        <activity android:name=".activities.ScoreDetailActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activities.StudentDetailActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activities.StuInfoEditActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activities.StuSubmitActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activities.ScoreAddActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activities.AwardsAddActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activities.MimeDetalInfoActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activities.TestActivity" />
    </application>

</manifest>